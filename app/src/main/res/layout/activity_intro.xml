<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.wordpress.tonytam.mathgetto24.IntroActivity" >

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        android:text="dummy" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff407599"
            android:id="@+id/overallLayout"
            android:clickable="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="false"
                android:id="@+id/operatorLayout"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false"
                android:layout_marginRight="0dp">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/operatorPlus"
                    android:background="@drawable/plus" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/operatorMinus"
                    android:background="@drawable/minus"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/operatorMultiply"
                    android:background="@drawable/multiply"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/operatorDivide"
                    android:background="@drawable/divide" />
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_margin="5dp"
                android:id="@+id/numberLayout">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:id="@+id/numNE"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:background="@drawable/num_10"
                    android:layout_margin="5dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linearLayout3">

                </LinearLayout>

                <Button
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:id="@+id/numNW"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:background="@drawable/num_1"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:id="@+id/numSE"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:background="@drawable/num_7"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:id="@+id/numSW"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:background="@drawable/num_3"
                    android:layout_margin="5dp" />
            </GridLayout>

            <FrameLayout
                android:id="@+id/player2Area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp" >

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="72dp"
                    android:id="@+id/player2Button"
                    android:background="@drawable/go_button"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Time"
                        android:id="@+id/textView3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="123"
                        android:id="@+id/textView4" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/player1Area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:paddingBottom="10dp" >

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="72dp"
                    android:id="@+id/imageButton4"
                    android:background="@drawable/go_button"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="123"
                        android:id="@+id/textView8"
                        android:layout_gravity="right"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Time"
                        android:id="@+id/textView7"
                        android:editable="false"
                        android:maxLines="1"
                        android:layout_gravity="right"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true" />
                </LinearLayout>
            </FrameLayout>

        </RelativeLayout>
    </LinearLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
